{
  "name": "vite-web-extension",
  "version": "2.0.0",
  "description": "A simple chrome & firefox extension template with Vite, React, TypeScript and Tailwind CSS.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/denistex/vite-web-extension.git"
  },
  "type": "module",
  "engines": {
    "node": ">=24.8.0",
    "npm": ">=11.6.0"
  },
  "lint-staged": {
    "*.{js,mjs,jsx,ts,tsx}": "npm run lint:base --",
    "*.{js,mjs,jsx,ts,tsx,css,md}": "npm run format:base -- --check"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "build": "vite build --config vite.config.chrome.ts",
    "build:chrome": "vite build --config vite.config.chrome.ts",
    "build:firefox": "vite build --config vite.config.firefox.ts",
    "dev": "nodemon --config nodemon.chrome.json",
    "dev:chrome": "nodemon --config nodemon.chrome.json",
    "dev:firefox": "nodemon --config nodemon.firefox.json",
    "format": "npm run format:base -- --write .",
    "lint": "npm run lint:base -- --fix .",
    "typecheck": "tsc",
    "format:base": "prettier --ignore-unknown --cache --cache-location ./node_modules/.cache/prettier/.prettier-cache --cache-strategy content",
    "format:check-all": "npm run format:base -- --check .",
    "lint:base": "eslint --max-warnings 0 --cache --cache-location ./node_modules/.cache/eslint/.eslint-cache --cache-strategy content",
    "lint:check-all": "npm run lint:base -- .",
    "validate": "npm-run-all --parallel typecheck format:check-all lint:check-all",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@crxjs/vite-plugin": "^2.2.0",
    "@eslint/js": "^9.35.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/chrome": "^0.1.12",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^24.5.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/webextension-polyfill": "^0.12.3",
    "@vitejs/plugin-react": "^5.0.3",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fs-extra": "^11.3.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.5",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
